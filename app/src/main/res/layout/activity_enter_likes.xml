<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.spal.generation2you.EnterLikes">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/likesLabel"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:text="(Enter words seperated by commas) "
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/userLikes"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="440dp"
        android:inputType="textCapWords"
        android:hint="ex. Hiking, Golf, Swimming"/>

    <Button
        android:layout_weight="1"
        android:layout_gravity="bottom"
        android:id="@+id/buttonSubmit"
        android:onClick="pushToAWS"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/likesSubmit" />

</LinearLayout>
